{
  "version": 2,
  "builds": [
    {
      "src": "sigueai-api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["sigueai-api/**"]
      }
    },
    {
      "src": "sigueai-web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "sigueai-web/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "sigueai-api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "sigueai-web/dist/$1",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "sigueai-web/dist/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
