{
  "version": 2,
  "builds": [
    {
      "src": "sigueai-api/index.js",
      "config": {
        "includeFiles": ["sigueai-api/**/*.js"]
      }
    },
    {
      "src": "sigueai-web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "cleanUrls": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/sigueai-api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/sigueai-web/$1",
      "continue": true
    }
  ]
}
